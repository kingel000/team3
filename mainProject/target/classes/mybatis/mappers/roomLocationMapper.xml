<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="main.project.web.chat.dao.IRoomLocationDAO">

	<insert id="startRoom" parameterType="roomLocationVO">
		INSERT INTO room_location VALUES(#{member_id},#{room_id},sysdate)
	</insert>

	<select id="searchLocation" parameterType="String" resultType="roomLocationVO">
		SELECT * FROM room_location WHERE member_id = #{memberId}
	</select>
	
	<update id="moveRoom" parameterType="roomLocationVO">
		UPDATE room_location SET room_id = #{room_id}, location_date = sysdate 
		WHERE member_id = #{member_id}
	</update>
		
	<delete id="endRoom" parameterType="String">
		DELETE FROM room_location WHERE member_id = #{id}
	</delete>
	
</mapper>